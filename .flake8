# This is an example .flake8 config, used when developing *Black* itself.
# Keep in sync with setup.cfg which is used for source packages.

[flake8]
ignore = W503, E203, E221, C901, C408, E741, C407, E741, B017, F405, F403
max-line-length = 100
max-complexity = 18
select = B,C,E,F,W,T4,B9
exclude = .git,__pycache__,docs/source/conf.py,old,build,dist,.ipynb_checkpoints
per-file-ignores =
  **/__init__.py:F401,F403,E402
  tests/**.py:F401,E402
